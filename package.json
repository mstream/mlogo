{
  "name": "mlogo",
  "description": "A Logo language execution environment",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mstream/mlogo"
  },
  "scripts": {
    "build:production": "spago -x spago.production.dhall build",
    "build:test": "spago build",
    "bundle": "npm run bundle:cli && npm run bundle:webapp",
    "bundle:cli": "npm run build:production && purs-backend-es bundle-app -m Main.CLI --minify --no-build -p node -t dist/cli.js",
    "bundle:webapp": "npm run build:production && purs-backend-es bundle-app -m Main.WebApp --minify --no-build -p browser -t dist/webapp.js && cp dist/webapp.js static/",
    "clean": "rm -rf .spago dist output*",
    "lint": "npm run clean && spago build --purs-args '--censor-lib --strict'",
    "release": "release-it",
    "serve": "http-server static",
    "test": "spago test",
    "test:interpretation": "spago test --exec-args Interpretation",
    "test:lexing": "spago test --exec-args Lexing",
    "test:parsing": "spago test --exec-args Parsing",
    "test:printing": "spago test --exec-args Printing",
    "test:program": "spago test --exec-args Program"
  },
  "type": "module",
  "devDependencies": {
    "@release-it/conventional-changelog": "^5",
    "http-server": "^14",
    "release-it": "^15"
  },
  "dependencies": {
    "ace-builds": "^1",
    "lz-string": "^1"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "requireCleanWorkingDir": true
    },
    "github": {
      "release": true,
      "releaseName": "Release ${version}",
      "tokenRef": "GITHUB_TOKEN"
    },
    "npm": {
      "publish": false,
      "skipChecks": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "refactor",
              "hidden": true
            }
          ]
        }
      }
    }
  },
  "version": "0.29.3"
}
